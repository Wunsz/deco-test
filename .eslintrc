{
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "extends": [
    "react-app",
    "airbnb-typescript",
    "plugin:jsx-a11y/recommended",
    "prettier"
  ],
  "plugins": [
    "jsx-a11y",
    "prettier"
  ],
  "env": {
    "browser": true,
    "jest": true
  },
  "rules": {
             // Indent with 4 spaces
    "indent": ["error", 2],
    "react/jsx-indent": ["error", 2],
    "react/jsx-indent-props": ["error", 2],
    "react/jsx-space-before-closing": ["error", "always"],
    "jsx-quotes": ["error", "prefer-double"]
  }
}
